<Page
    x:Class="Win10_Mobile_ToDoApp.ToDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win10_Mobile_ToDoApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light">

    <Page.Resources>
        <local:BoolToTextDecorationsConverter x:Key="Current"/>
        <!-- Animations -->
        <Storyboard x:Key="HoverAnimation">
            <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                            To="#E0E0E0" Duration="0:0:0.2" EnableDependentAnimation="True"/>
        </Storyboard>
        <Storyboard x:Key="HoverAnimationDark">
            <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                            To="#333333" Duration="0:0:0.2" EnableDependentAnimation="True"/>
        </Storyboard>
        <!-- Light Theme Styles -->
        <Style x:Key="ContainerStyleLight" TargetType="Grid">
            <Setter Property="Background" Value="#FAFAFA"/>
        </Style>
        <Style x:Key="TaskTextStyleLight" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="AddButtonStyleLight" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0078D7"/>
            <Setter Property="Margin" Value="0,10,10,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DeleteButtonStyleLight" TargetType="Button">
            <Setter Property="Background" Value="#D83B01"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#D83B01"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxStyleLight" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style x:Key="ListViewStyleLight" TargetType="ListView">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="ThemeButtonStyleLight" TargetType="Button">
            <Setter Property="Background" Value="#606060"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ListViewItemStyleLight" TargetType="ListViewItem">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        <Style x:Key="CheckBoxStyleLight" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
        <!-- Dark Theme Styles -->
        <Style x:Key="ContainerStyleDark" TargetType="Grid">
            <Setter Property="Background" Value="#1F1F1F"/>
        </Style>
        <Style x:Key="TaskTextStyleDark" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="AddButtonStyleDark" TargetType="Button">
            <Setter Property="Background" Value="#005EA6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005EA6"/>
            <Setter Property="Margin" Value="0,10,10,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DeleteButtonStyleDark" TargetType="Button">
            <Setter Property="Background" Value="#B33101"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#B33101"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxStyleDark" TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style x:Key="ListViewStyleDark" TargetType="ListView">
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="ThemeButtonStyleDark" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ListViewItemStyleDark" TargetType="ListViewItem">
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        <Style x:Key="CheckBoxStyleDark" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </Page.Resources>

    <Grid Style="{StaticResource ContainerStyleLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" Background="Transparent">
            <TextBox x:Name="TaskInput" PlaceholderText="Enter a task" Style="{StaticResource TextBoxStyleLight}"/>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <Button x:Name="AddTaskButton" Content="Add Task" Click="AddTaskButton_Click" Style="{StaticResource AddButtonStyleLight}"
                        PointerPressed="Button_PointerPressed" PointerReleased="Button_PointerReleased"/>
                <Button x:Name="ThemeToggleButton" Content="Dark Mode" Click="ThemeToggleButton_Click" Style="{StaticResource ThemeButtonStyleLight}"
                        PointerPressed="Button_PointerPressed" PointerReleased="Button_PointerReleased"/>
            </StackPanel>
        </StackPanel>

        <ListView x:Name="TaskListView" Grid.Row="1" Style="{StaticResource ListViewStyleLight}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemStyleLight}">
                    <Setter Property="Transitions">
                        <Setter.Value>
                            <TransitionCollection>
                                <ContentThemeTransition/>
                            </TransitionCollection>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TaskItem">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" Click="CheckBox_Click" Style="{StaticResource CheckBoxStyleLight}"/>
                        <TextBlock Text="{x:Bind TaskName}" Style="{StaticResource TaskTextStyleLight}"
                                   TextDecorations="{Binding IsCompleted, Converter={StaticResource Current}, Mode=OneWay}"/>
                        <Button Content="Delete" Tag="{x:Bind TaskName}" Click="DeleteTaskButton_Click" Style="{StaticResource DeleteButtonStyleLight}"
                                PointerPressed="Button_PointerPressed" PointerReleased="Button_PointerReleased"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>